/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xparameters.h"
#include "xgpio.h"
#include "stdio.h"
#include "xstatus.h"
#include "xil_printf.h"
#include "xgpio_l.h"

#define GPIO_CHANNEL 1
#define BTN_INPUT 0x1F
#define printf xil_printf	/* A smaller footprint printf */
#define GPIO_REG_BASEADDR	XPAR_GPIO_0_BASEADDR
#define LED_DELAY 1000000

/************************** Function Prototypes ****************************/

int GpioOutputExample(u16 DeviceId, u32 GpioWidth);
int GpioInputExample(u16 DeviceId, u32 *DataRead);



/************************** Variable Definitions **************************/
/*
 * The following are declared globally so they are zeroed and so they are
 * easily accessible from a debugger
 */

XGpio GpioInput;  /* The driver instance for GPIO Device configured as I/P */

int main()
{
	XGpio_WriteReg((GPIO_REG_BASEADDR),
				((GPIO_CHANNEL - 1) * XGPIO_CHAN_OFFSET) +
				XGPIO_TRI_OFFSET, (~0x00));
    init_platform();
	u32 Data;
	volatile int Delay;

	printf("Hello World\n\r");
	printf("Hello World2\n\r");

	printf("Hello World3\n\r");
	/* Loop forever blinking the LED */

	while (1) {
		/*
		 * Read the state of the data so that only the LED state can be
		 * modified
		 */
		Data = XGpio_ReadReg(GPIO_REG_BASEADDR,
				((GPIO_CHANNEL - 1) * XGPIO_CHAN_OFFSET) +
				  XGPIO_DATA_OFFSET);
		printf("Data read from GPIO Input is  0x%x \n\r", (int)Data);

		for (Delay = 0; Delay < LED_DELAY; Delay++);
	}
    cleanup_platform();
    return 0;
}
